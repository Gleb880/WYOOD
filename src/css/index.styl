* {
    box-sizing: border-box;
}

html,
body {
    font: 18px/1.7 'Ninito', sans-serif;
}

body {
    margin: 0;
    color: #fff;
    background-color: #0B1D26;
    background-image: url("./../images/bg.jpg");
    background-size: 100% auto;
    background-repeat: no-repeat;
}

/* Base */
.container-wide {
    margin: 0 auto;
    // width: 1790px;
    width: 100%;
    padding: 0 15px;  

    .row {
        display: flex;

        &.space-between {
            justify-content: space-between; 

            .logo {
                font-family: 'Playfair Display', serif;
                font-weight: 700;
                font-size: 32px;
            }   

            .nav {
                font-weight: 700;

                ul {
                    display: flex;
                    margin: 0;
                    padding: 0;
                    list-style-type: none;

                    a {
                        color: #fff;
                        text-decoration: none;
                        transition: color 0.2s ease-in;

                        &:hover {
                            color: #FBD784;
                        }
                    }
                }    
            }

            .nav li + li {
                        margin-left: 40px;
            }

            .account {
                font-size: 17px;  
                font-weight: 700;
                text-decoration: none;
                color: #fff;
                transition: color 0.2s ease-in;

                &:hover {
                    color: #FBD784;    
                }
            }
        }    
    }  
}

/* Header */
.header {
    padding-top: 64px;
    padding-bottom: 843px;

}

.nav-wrapper {
    margin-bottom: 128px; 

    .align-center {
        align-items: center;    
    }   
}

/* Hero */
.hero {
    display: block;
    margin-left: auto;
    margin-right: auto;
    max-width: 980px;
    padding-left: 15px;
    padding-right: 15px;
    text-decoration: none;
    transition: transform 2s ease;
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.5));

    &:hover {
        transform: translateY(-5%);    
    }

    .hero-category { 
        margin-bottom: 32px;
        position: relative;
        font-weight: 800;
        padding-left: 104px;
        font-size: 18px;
        line-height: 1.22;
        letter-spacing: 6px;
        text-transform: uppercase;
        color: #FBD784;

        &::before {
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            display: block;
            content: '';
            width: 72px;
            height: 2px;
            background-color: #FBD784;
        }    
    }   

    .hero-title {
        margin-bottom: 32px;
        font-family: 'Playfair Display', serif;
        font-size: 88px;
        font-style: normal;
        font-weight: 500;
        line-height: 1.136;
        text-transform: capitalize;
        text-align: left;
        color: #fff;
    } 

    .hero-scroll {
        display: inline-block;
        position: relative;
        padding-right: 32px;
        font-weight: 500;
        font-size: 18px;
        line-height: 1.222;    
        color: #fff;

        &::after {
            display: block;
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            background-image: url('./../images/icons/arrow_downward.svg'); 
            width: 16px;
            height: 24px;

        }
    }
}

/* Main */
.container {
    max-width: 1492px; 
    margin-left: auto;
    margin-right: auto;
    padding-left: 15px;
    padding-right: 15px;   
}

/* Article */
.article {
    display: flex;
    justify-content: space-between;
    align-items: center;

    .article-text {
        padding-left: 150px; 
        max-width: 782px;
        position: relative;

        &::before {
            display: block;
            content: attr(data-number);
            position: absolute;
            left: 0;
            top: 0;
            transform: translateY(-50%);
            width: 240px;
            height: 240px;

            font-style: normal;
            font-weight: 700;
            font-size: 240px;
            line-height: 1;   
            color: #fff;
            opacity: 0.1;
        }

        p {
            font-style: normal;
            font-weight: bold;
            font-size: 18px;
            line-height: 1.78;
            color: #FFFFFF;
            margin-bottom: 27px;
        }   
    }    

    .article-subtitle {
        margin-bottom: 32px;
        position: relative;
        font-weight: 800;
        padding-left: 96px;
        font-size: 18px;
        line-height: 1.22;
        letter-spacing: 6px;
        text-transform: uppercase;
        color: #FBD784;

        &::before {
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            display: block;
            content: '';
            width: 72px;
            height: 2px;
            background-color: #FBD784;
        }        
    }

    .article-title {
        max-width: 555px;
        margin-bottom: 27px;
        font-family: 'Playfair Display', serif;
        font-style: normal;
        font-weight: 500;
        font-size: 64px;
        line-height: 1.2;
        color: #FFFFFF;
    }

    .article-read-more {
        display: inline-block;
        position: relative;
        padding-right: 40px;
        font-weight: 500;
        font-size: 18px;
        line-height: 1.222;    
        color: #FBD784;

        &::after {
            display: block;
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            background-image: url('./../images/icons/arrow_rightward.svg'); 
            width: 24px;
            height: 16px;

        }    
    }
}
